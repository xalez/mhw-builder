{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"module": "esnext",
    "moduleResolution": "node",
		"experimentalDecorators": true,
		"target": "es2015",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2018",
			"dom"
		],
		"paths": {
			"core-js/es7/reflect": [
				"node_modules/core-js/proposals/reflect-metadata"
			]
		}
	},
	"exclude": [
		"dist"
	]
}
